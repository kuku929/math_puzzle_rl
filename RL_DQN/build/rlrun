#!/bin/bash
ninja
w_flag=0
t_flag=0
while getopts "wt" flag; do
	case $flag in
		w) 
			w_flag=1 
			;;
		t)
			t_flag=1
			;;
	esac
done
if [ "$w_flag" == 1 ]; then
	if [ "$t_flag" == 1 ]; then
		./main -w -t
	else
		./main -w
	fi
else
	if [ "$t_flag" == 1 ]; then
		./main -t
	else
		./main
	fi
fi
nvim debug.txt
